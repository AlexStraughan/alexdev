        // Milestone celebration
        function showMilestone(text) {
            const milestone = document.createElement('div');
            milestone.className = 'milestone-effect';
            milestone.textContent = text;
            document.body.appendChild(milestone);
            
            let scale = 0;
            let opacity = 1;
