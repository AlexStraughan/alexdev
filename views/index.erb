        ];
        let achievements = [
            { id: "first_click", name: "First Steps", description: "Make your first click", requirement: 1, type: "clicks" },
            { id: "hundred_clicks", name: "Clicking Master", description: "Click 100 times", requirement: 100, type: "clicks" },
